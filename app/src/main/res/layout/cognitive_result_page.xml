<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cognitive_result_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <TextView
                    android:text="[PREDOCTD LABEL]"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/prediction_result_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NONE"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="10dp"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="[SPEED]"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/speed_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NONE"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="10dp"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="[ACCELERATE]"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/accelerate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NONE"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="10dp"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="[GYROSCOPE]"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/gyro_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NONE"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="10dp"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <TextView
                    android:text="[COGNITIVE SCORE]"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/cognitive_capability_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NONE"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="10dp"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
                <EditText
                    android:id="@+id/CSV_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="CSV.csv"/>
                <Button
                    android:id="@+id/start_csv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="기록 버튼"/>
                <Button
                    android:id="@+id/down"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="10dp"

                    android:text="초보자"/>
                <Button
                    android:id="@+id/up"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"

                    android:text="숙련자"/>
        </LinearLayout>
    </LinearLayout>



