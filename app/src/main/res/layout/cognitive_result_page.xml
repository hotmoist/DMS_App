<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cognitive_result_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

        <TextView
            android:id="@+id/prediction_result_textview"
            android:text="[Predicted Label]\n NONE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/cognitive_capability_textview"
            android:text="[Cognitive capability]\n NONE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/speed_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Current Speed] NONE"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/gyro_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Current Gyro] \nNONE"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/result_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="[Calculated result] \n NONE"
            android:gravity="center"
            />

    </LinearLayout>



