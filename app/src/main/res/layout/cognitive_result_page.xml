<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cognitive_result_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

        <TextView
            android:text="[Predicted Label]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/prediction_result_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NONE"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:text="[Cognitive capability]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cognitive_capability_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NONE"
            android:textColor="@color/white"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/speed_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NONE"
            android:textColor="@color/white"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/gyro_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NONE"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="[Calculated result]"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/result_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="NONE"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
                <EditText
                    android:id="@+id/CSV_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="CSV.csv"/>
                <Button
                    android:id="@+id/start_csv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기록 버튼"/>
        </LinearLayout>
    </LinearLayout>



